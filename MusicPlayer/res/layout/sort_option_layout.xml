<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingHorizontal="30dp">

    <CheckedTextView
        android:id="@+id/sort_option_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?android:attr/listChoiceBackgroundIndicator"
        android:drawableEnd="@drawable/ic_radio_button_unchecked"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/sort_option_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_option_textView"
        android:layout_centerVertical="true"
        android:contentDescription="@string/str_sort_title" />
</RelativeLayout>